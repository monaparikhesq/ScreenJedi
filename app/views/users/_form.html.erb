<form>
  <%= form_for @user do |f| %>
    <div class="form-field">
      <%= f.label :first_name, :class => "form-label" %>
      <%= f.text_field :first_name, :class => "form-field" %>
    </div>

    <div class="form-field">
      <%= f.label :last_name, :class => "form-label" %>
      <%= f.text_field :last_name, :class => "form-field" %>
    </div>

    <div class="form-field">
      <%= f.label :email, :class => "form-label" %>
      <%= f.text_field :email, :class => "form-field" %>
    </div>

    <div class="form-field">
      <%= f.label :password, :class => "form-label" %>
      <%= f.password_field :password, :class => "form-field" %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, :class => "form-label" %>
      <%= f.password_field :password_confirmation, :class => "form-field" %>
    </div>

      <%= f.submit nil %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => "cancel-button" %>
  <% end %>
</form>