    <div class="form-field">
      <%= f.label :comment, :class => "form-label" %>
      <%= f.text_area :comment, :placeholder => 'Optional', :class => "form-field" %>
    </div>

    <%= f.submit :class => "btn" %>
  </form>

<% end %>
